<?xml version="1.0" encoding="utf-8"?>
<!--Main Layout  -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#f6f4f4"
    >
    <!--Layout to add the heading of the app-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/head"
        android:background="@drawable/rectangle"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <!--Using this textview for my app's Heading-->
    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Calculator"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textColor="@color/black"
        ></TextView>
    </RelativeLayout>
    <!--Layout to add the display of the calculator-->
        <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:textAlignment="viewEnd"
        android:text="0"
        android:gravity="bottom"
        android:textSize="50dp"
        android:textStyle="bold"
        android:fontFamily="serif"
            tools:ignore="RtlCompat"></TextView>
    <!--Layout to add the buttons-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/buttonlayout"
        android:background="@drawable/circle"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_gravity="bottom"
        >
        <!--Layout to add the line-->
            <View
                android:layout_width="200dp"
                android:layout_height="15dp"
                android:background="@drawable/line"
                android:layout_marginTop="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:id="@+id/line"
                ></View>
        <!--Starting to add Buttons-->
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="#F6F4F4"
    android:text="AC"
    android:id="@+id/ac"
    android:textSize="30sp"
    android:gravity="center"
    android:fontFamily="serif"
    android:textColor="@color/orange"
    android:layout_margin="10dp"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/line"
    android:textStyle="bold"
></Button>

            <Button
                android:id="@+id/c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_margin="10dp"
                android:layout_toRightOf="@id/ac"
                android:backgroundTint="#F6F4F4"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="C"
                android:textColor="@color/orange"
                android:textSize="30sp"
                android:textStyle="bold"></Button>
        <Button
            android:id="@+id/leftbracket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F6F4F4"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="("
            android:textColor="@color/orange"
            android:textSize="30sp"
            android:layout_toRightOf="@id/c"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:layout_below="@+id/line"
            ></Button>
        <Button
            android:id="@+id/rightbracket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F6F4F4"
            android:fontFamily="serif"
            android:gravity="center"
            android:text=")"
            android:textColor="@color/orange"
            android:textSize="30sp"
            android:layout_toRightOf="@id/leftbracket"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:layout_below="@+id/line"
            ></Button>
        <Button
            android:id="@+id/log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F6F4F4"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="ln"
            android:textColor="@color/orange"
            android:textSize="30sp"
            android:layout_below="@+id/ac"
            android:layout_margin="10dp"
            android:textStyle="bold"
            ></Button>
        <Button
            android:id="@+id/power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F6F4F4"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="^"
            android:textColor="@color/orange"
            android:textSize="30sp"
            android:layout_below="@+id/c"
            android:layout_toRightOf="@+id/log"
            android:layout_margin="10dp"
            android:textStyle="bold"
            ></Button>
        <Button
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F6F4F4"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="%"
            android:textColor="@color/orange"
            android:textSize="30sp"
            android:layout_toRightOf="@id/power"
            android:layout_below="@+id/leftbracket"
            android:layout_margin="10dp"
            android:textStyle="bold"
            ></Button>
        <Button
            android:id="@+id/division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F6F4F4"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="/"
            android:textColor="@color/orange"
            android:textSize="30sp"
            android:layout_toRightOf="@id/percent"
            android:layout_below="@+id/rightbracket"
            android:layout_margin="10dp"
            android:textStyle="bold"
            ></Button>
        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F6F4F4"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_below="@id/log"
            android:layout_margin="10dp"
            android:textStyle="bold"
            ></Button>
        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F6F4F4"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_below="@id/power"
            android:layout_toRightOf="@id/seven"
            android:layout_margin="10dp"
            android:textStyle="bold"
            ></Button>
        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F6F4F4"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_below="@id/percent"
            android:layout_toRightOf="@id/eight"
            android:layout_margin="10dp"
            android:textStyle="bold"
            ></Button>
        <Button
            android:id="@+id/multiplication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#f6f4f4"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="*"
            android:textColor="@color/orange"
            android:textSize="30sp"
            android:layout_below="@id/division"
            android:layout_toRightOf="@id/nine"
            android:layout_margin="10dp"
            android:textStyle="bold"
            ></Button>
        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F6F4F4"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_below="@id/seven"
            android:layout_margin="10dp"
            android:textStyle="bold"
            ></Button>
        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#f6f4f4"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_below="@id/eight"
            android:layout_toRightOf="@id/four"
            android:layout_margin="10dp"
            android:textStyle="bold"
            ></Button>
        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#f6f4f4"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_below="@id/nine"
            android:layout_toRightOf="@id/five"
            android:layout_margin="10dp"
            android:textStyle="bold"
            ></Button>
        <Button
            android:id="@+id/subtraction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#f6f4f4"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/orange"
            android:textSize="30sp"
            android:layout_below="@id/multiplication"
            android:layout_toRightOf="@id/six"
            android:layout_margin="10dp"
            android:textStyle="bold"
            ></Button>
        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#f6f4f4"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_below="@id/four"
            android:layout_margin="10dp"
            android:textStyle="bold"
            ></Button>
        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#f6f4f4"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_below="@id/five"
            android:layout_toRightOf="@id/one"
            android:layout_margin="10dp"
            android:textStyle="bold"
            ></Button>
        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#f6f4f4"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_below="@id/six"
            android:layout_toRightOf="@id/two"
            android:layout_margin="10dp"
            android:textStyle="bold"
            ></Button>
        <Button
            android:id="@+id/addition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#f6f4f4"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/orange"
            android:textSize="30sp"
            android:layout_below="@id/subtraction"
            android:layout_toRightOf="@id/three"
            android:layout_margin="10dp"
            android:textStyle="bold"
            ></Button>
        <Button
            android:id="@+id/doublezero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#f6f4f4"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_below="@id/one"
            android:layout_margin="10dp"
            android:textStyle="bold"
            ></Button>
        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#f6f4f4"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_below="@id/two"
            android:layout_toRightOf="@id/doublezero"
            android:layout_margin="10dp"
            android:textStyle="bold"
            ></Button>
        <Button
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#f6f4f4"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="."
            android:textColor="@color/black"
            android:textSize="30sp"
            android:layout_below="@id/three"
            android:layout_toRightOf="@id/zero"
            android:layout_margin="10dp"
            android:textStyle="bold"
            ></Button>
        <Button
            android:id="@+id/equals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#f6f4f4"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="="
            android:textColor="@color/orange"
            android:textSize="30sp"
            android:layout_below="@id/addition"
            android:layout_toRightOf="@id/point"
            android:layout_margin="10dp"
            android:textStyle="bold"
            ></Button>
    </RelativeLayout>

</LinearLayout>